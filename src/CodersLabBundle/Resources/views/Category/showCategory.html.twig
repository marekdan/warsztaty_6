{% extends 'CodersLabBundle::layout.html.twig' %}

{% block title %}
    Category: {{ category.categoryName }}
{% endblock %}

{% block header %}
    {{ parent() }}
    <a href="{{ path('showMyCategories', {'userId':app.user.id}) }}">BACK TO CATEGORIES</a><br>
{% endblock %}

{% block panelTitle %}
    <span class="panel-title">{{ category.categoryName }}</span>
    <div class="btn-group" role="group" aria-label="...">
        <a class="btn btn-default"
           href="{{ path('editCategory', {'categoryId':category.id, 'userId':app.user.id}) }}">EDIT</a>
        <a class="btn btn-default"
           href="{{ path('deleteCategory', {'categoryId':category.id, 'userId':app.user.id}) }}">DELETE</a>
        <a class="btn btn-default" href="{{ path('addTask', {'categoryId':category.id, 'userId':app.user.id}) }}">ADD
            TASK</a>
    </div>
{% endblock %}

{% block content %}
    {% include 'CodersLabBundle:Tasks:showAllTasks.html.twig' with {'tasks': tasks, 'categoryId':category.id} %}
{% endblock %}
