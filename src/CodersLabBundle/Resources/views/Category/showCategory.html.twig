{% extends 'CodersLabBundle:Main:index.html.twig' %}

{% block title %}
    Category: {{ category.categoryName }}
{% endblock %}

{% block header %}
    {{ parent() }}
    <a href="{{ path('showMyCategories', {'userId':app.user.id}) }}">BACK TO CATEGORIES</a><br>
{% endblock %}

{% block content %}
    {{ category.categoryName }}
    <a href="{{ path('editCategory', {'categoryId':category.id, 'userId':app.user.id}) }}"><strong>EDIT</strong></a>
    <a href="{{ path('deleteCategory', {'categoryId':category.id, 'userId':app.user.id}) }}">DELETE</a><br><br>
    <a href="{{ path('addTask', {'categoryId':category.id, 'userId':app.user.id}) }}">ADD TASK</a><br>
{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}